<fieldset class='state_info no-border-bottom' id='cart_info'>
  <legend>{{i18n 'order.states.cart' }}</legend>

  {{partial 'orders/add_product' }}
    
  <table id='line-items' class="line-items index">
    <colgroup>
      <col style="width: 10%;" />
      <col style="width: 40%;" />
      <col style="width: 10%;" />
      <col style="width: 10%;" />
    </colgroup>

    <thead>
      <th colspan="2">{{i18n 'name' }}</th>
      <th>{{i18n 'price' }}</th>
      <th>{{i18n 'quantity' }}</th>
      <th>{{i18n 'total_price' }}</th>
      <th class="orders-actions actions">&nbsp;</th>
    </thead>

    <tbody>
      {{#each line_items}}
        {{render 'orders/line_items/show' this}}
      {{/each}}
    </tbody>
  </table>
</fieldset>